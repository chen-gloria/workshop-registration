{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_INSTRUCTOR') %}
    {% block navbar_toolkit %}
        <ul class="list-unstyled topbar-menu float-end mb-0">
            {% block translations %}{{ include('navbar/translations.html.twig')}}{% endblock %}
            {% block profile %}{{ include('navbar/profile.html.twig')}}{% endblock %}
        </ul>
    {% endblock %}
{% endif %}


{% if not is_granted('ROLE_ADMIN') and not is_granted('ROLE_INSTRUCTOR')  %}
    {% block login_register %}
        <ul class="list-unstyled topbar-menu float-end mb-0">
            {{ include('navbar/login_register.html.twig')}}
        </ul>
    {% endblock %}
{% endif %}
